<%- include('partials/header.ejs') %>
<body>
  
<%- include('partials/navbar.ejs') %>
 <div class="container">
    <hr>
    <h1><%= pergunta.titulo%></h1>
    <p><%= pergunta.descricao%></p>
    <hr>
    <form method="POST" action="/resposta">
      <h3>Responda</h3>
      <textarea name="corpo" placeholder="Digite a resposta" class="form-control"></textarea>
      <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
      <button type="submit" class="btn mt-3">Enviar</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>

    <% respostas.forEach( resposta => {%>

      <div class="card mt-3">
        <div class="card-body">
          <p><%= resposta.corpo %></p>
        </div>
      </div>

    <% }) %>
 </div>
</body>

<%- include('partials/footer.ejs') %>